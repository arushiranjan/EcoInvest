        function setupSearch() {
            productAInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                if (searchTerm.length > 2) {
                    const results = products.filter(product => 
                        product.name.toLowerCase().includes(searchTerm)
                        .slice(0, 5));
                    displaySearchResults(results, productAResults, 'A');
                } else {
                    productAResults.style.display = 'none';
                }
            });
            
            productBInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                if (searchTerm.length > 2) {
                    const results = products.filter(product => 
                        product.name.toLowerCase().includes(searchTerm))
                        .slice(0, 5);
                    displaySearchResults(results, productBResults, 'B');
                } else {
                    productBResults.style.display = 'none';
                }
            });
            
            document.addEventListener('click', function(e) {
                if (!productAInput.contains(e.target) && !productAResults.contains(e.target)) {
                    productAResults.style.display = 'none';
                }
                if (!productBInput.contains(e.target) && !productBResults.contains(e.target)) {
                    productBResults.style.display = 'none';
                }
            });
        }

        function displaySearchResults(results, container, productLetter) {
            container.innerHTML = '';
            
            if (results.length === 0) {
                const noResults = document.createElement('div');
                noResults.className = 'search-result-item';
                noResults.textContent = 'No products found';
                container.appendChild(noResults);
            } else {
                results.forEach(product => {
