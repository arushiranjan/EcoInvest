                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: `CO2e (${productA.co2e_unit})`
                            }
                        }
                    }
                }
            });

            
            const gasesCtx = document.getElementById('gasesChart').getContext('2d');
            gasesChart = new Chart(gasesCtx, {
                type: 'doughnut',
                data: {
                    labels: ['CO2', 'Other Greenhouse Gases'],
                    datasets: [
                        {
                            label: productA.name,
                            data: [productA.constituent_gases.co2, productA.constituent_gases.co2e_other],
                            backgroundColor: [
                                'rgba(76, 175, 80, 0.7)',
                                'rgba(255, 152, 0, 0.7)'
                            ],
                            borderColor: [
                                'rgba(76, 175, 80, 1)',
                                'rgba(255, 152, 0, 1)'
                            ]
                        },
                        {
                            label: productB.name,
                            data: [productB.constituent_gases.co2, productB.constituent_gases.co2e_other],
                            backgroundColor: [
                                'rgba(129, 199, 132, 0.7)',
                                'rgba(255, 193, 7, 0.7)'
                            ],
                            borderColor: [
                                'rgba(129, 199, 132, 1)',
                                'rgba(255, 193, 7, 1)'
                            ]
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw} ${productA.co2e_unit}`;
                                }
                            }
                        }
                    }
                }
            });

            
            const emissionCtx = document.getElementById('emissionChart').getContext('2d');
            emissionChart = new Chart(emissionCtx, {
                type: 'radar',
                data: {
                    labels: ['Carbon Intensity', 'Price', 'CO2 Portion', 'Other Gases'],
                    datasets: [
                        {
                            label: productA.name,
                            data: [
                                productA.co2e / productA.activity_data.activity_value,
                                productA.activity_data.activity_value,
                                productA.constituent_gases.co2 / productA.co2e * 100,
                                productA.constituent_gases.co2e_other / productA.co2e * 100
                            ],
                            backgroundColor: 'rgba(76, 175, 80, 0.2)',
                            borderColor: 'rgba(76, 175, 80, 1)',
                            pointBackgroundColor: 'rgba(76, 175, 80, 1)'
                        },
                        {
                            label: productB.name,
                            data: [
                                productB.co2e / productB.activity_data.activity_value,
                                productB.activity_data.activity_value,
                                productB.constituent_gases.co2 / productB.co2e * 100,
                                productB.constituent_gases.co2e_other / productB.co2e * 100
                            ],
                            backgroundColor: 'rgba(129, 199, 132, 0.2)',
                            borderColor: 'rgba(129, 199, 132, 1)',
                            pointBackgroundColor: 'rgba(129, 199, 132, 1)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    if (context.dataIndex === 0) {
                                        label += context.raw.toFixed(2) + ` ${productA.co2e_unit}/${productA.activity_data.activity_unit}`;
                                    } else if (context.dataIndex === 1) {
                                        label += context.raw + ' ' + productA.activity_data.activity_unit;
                                    } else {
                                        label += context.raw.toFixed(1) + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        r: {
                            angleLines: { display: true },
                            suggestedMin: 0
                        }
                    }
                }
            });

            const activityCtx = document.getElementById('activityChart').getContext('2d');
            activityChart = new Chart(activityCtx, {
                type: 'bar',
                data: {
                    labels: ['Price', 'Carbon Footprint', 'Carbon Intensity'],
                    datasets: [
                        {
                            label: productA.name,
                            data: [
                                productA.activity_data.activity_value,
                                productA.co2e,
                                productA.co2e / productA.activity_data.activity_value
                            ],
                            backgroundColor: 'rgba(76, 175, 80, 0.7)'
                        },
                        {
                            label: productB.name,
                            data: [
                                productB.activity_data.activity_value,
                                productB.co2e,
                                productB.co2e / productB.activity_data.activity_value
                            ],
                            backgroundColor: 'rgba(129, 199, 132, 0.7)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    if (context.dataIndex === 0) {
                                        label += context.raw + ' ' + productA.activity_data.activity_unit;
                                    } else if (context.dataIndex === 1) {
                                        label += context.raw + ' ' + productA.co2e_unit;
                                    } else {
                                        label += context.raw.toFixed(2) + ` ${productA.co2e_unit}/${productA.activity_data.activity_unit}`;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        
        function setupNavbarScroll() {
            window.addEventListener('scroll', function() {
                const navbar = document.getElementById('navbar');
                if (window.scrollY > 20) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }

        function setupNewsletterForm() {
            const newsletterForm = document.querySelector('.newsletter-form');
            if (newsletterForm) {
                newsletterForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const emailInput = this.querySelector('.newsletter-input');
                    if (emailInput.value) {
                        alert('Thank you for subscribing to our newsletter!');
                        emailInput.value = '';
                    }
                });
            }
        }
    </script>
</body>
