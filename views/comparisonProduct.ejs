        function compareProducts(productA, productB) {
            
            document.getElementById('productAImage').src = `https://via.placeholder.com/150?text=${productA.name.substring(0,2)}`;
            document.getElementById('productAName').textContent = productA.name;
            document.getElementById('productACategory').textContent = productA.emission_factor.category;
            document.getElementById('productACO2').textContent = `${productA.co2e} ${productA.co2e_unit} CO2e`;
            
            document.getElementById('productBImage').src = `https://via.placeholder.com/150?text=${productB.name.substring(0,2)}`;
            document.getElementById('productBName').textContent = productB.name;
            document.getElementById('productBCategory').textContent = productB.emission_factor.category;
            document.getElementById('productBCO2').textContent = `${productB.co2e} ${productB.co2e_unit} CO2e`;
            
            metricsContainer.innerHTML = '';
            
            const metrics = [
                {
                    title: 'Total Carbon Footprint',
                    icon: 'fas fa-smog',
                    valueA: productA.co2e,
                    valueB: productB.co2e,
                    unit: productA.co2e_unit,
                    higherIsBetter: false
                },
                {
                    title: 'CO2 Emissions',
                    icon: 'fas fa-industry',
                    valueA: productA.constituent_gases.co2,
                    valueB: productB.constituent_gases.co2,
                    unit: productA.co2e_unit,
                    higherIsBetter: false
                },
                {
                    title: 'Other Greenhouse Gases',
                    icon: 'fas fa-cloud',
                    valueA: productA.constituent_gases.co2e_other,
                    valueB: productB.constituent_gases.co2e_other,
                    unit: productA.co2e_unit,
                    higherIsBetter: false
                },
                {
                    title: 'Price',
                    icon: 'fas fa-tag',
                    valueA: productA.activity_data.activity_value,
                    valueB: productB.activity_data.activity_value,
                    unit: productA.activity_data.activity_unit,
                    higherIsBetter: false
                }
            ];
            
            metrics.forEach(metric => {
                const metricCard = document.createElement('div');
                metricCard.className = 'metric-card';
                let winner = '';
                let percentage = 50;
                
                if (metric.valueA < metric.valueB) {
                    winner = productA.name;
                    percentage = 30 + ((metric.valueB - metric.valueA) / metric.valueB * 40);
                } else if (metric.valueA > metric.valueB) {
                    winner = productB.name;
                    percentage = 70 - ((metric.valueA - metric.valueB) / metric.valueA * 40);
                } else {
                    winner = 'Tie';
                }
                
                percentage = Math.max(10, Math.min(90, percentage));
                
                metricCard.innerHTML = `
                    <div class="metric-title">
                        <i class="${metric.icon}"></i>
                        ${metric.title}
                    </div>
                    <div class="metric-values">
                        <div class="metric-value">${metric.valueA} ${metric.unit}</div>
                        <div class="metric-value">${metric.valueB} ${metric.unit}</div>
                    </div>
                    <div class="metric-bar-container">
                        <div class="metric-bar" style="width: ${percentage}%; margin-left: ${100 - percentage}%;"></div>
                    </div>
                    <div class="winner">
                        ${winner === 'Tie' ? 'Both products are equal' : `<strong>${winner}</strong> has lower emissions`}
                    </div>
                `;
                
                metricsContainer.appendChild(metricCard);
            });
            
            const overallScoreCard = document.createElement('div');
            overallScoreCard.className = 'overall-score';
            
            const scoreDifference = productA.co2e - productB.co2e;
            let differenceText = '';
            let differenceClass = '';
            
            if (scoreDifference > 0) {
                differenceText = `${productB.name} has ${scoreDifference.toFixed(2)} ${productA.co2e_unit} lower carbon footprint`;
                differenceClass = 'higher';
            } else if (scoreDifference < 0) {
                differenceText = `${productA.name} has ${Math.abs(scoreDifference).toFixed(2)} ${productA.co2e_unit} lower carbon footprint`;
                differenceClass = 'lower';
            } else {
                differenceText = 'Both products have the same carbon footprint';
            }
            
            overallScoreCard.innerHTML = `
                <div class="score-title">Overall Carbon Footprint Comparison</div>
                <div style="display: flex; justify-content: center; gap: 40px;">
                    <div>
                        <div style="font-size: 1.2rem;">${productA.name}</div>
                        <div class="score-value">${productA.co2e} ${productA.co2e_unit}</div>
                    </div>
                    <div>
                        <div style="font-size: 1.2rem;">${productB.name}</div>
                        <div class="score-value">${productB.co2e} ${productB.co2e_unit}</div>
                    </div>
                </div>
                <div class="score-difference ${differenceClass}">
                    ${differenceText}
                </div>
            `;
            
