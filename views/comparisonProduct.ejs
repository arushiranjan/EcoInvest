        .footer-logo i {
            margin-right: 10px;
        }

        .footer-logo-text {
            font-weight: 700;
        }

        .footer-about p {
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .footer-social {
            display: flex;
            gap: 15px;
        }

