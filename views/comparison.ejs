                <a href="#" class="nav-link nav-cta">
                    <i class="fas fa-user-plus"></i> Join Now
                </a>
            </li>
        </ul>
    </nav>

    
    <div class="main-content">
        <div class="comparison-container">
            <h1 class="page-title">ESG Company Comparison</h1>
            
            <div class="comparison-form">
                <div class="company-selector">
                    <div class="selector-header">
                        <div class="company-letter">A</div>
                        <h3>First Company</h3>  
                    </div>
                    <div class="search-container">
                        <input type="text" class="search-input" id="companyAInput" placeholder="Search for a company...">
                        <i class="fas fa-search search-icon"></i>
                        <div class="search-results" id="companyAResults"></div>
                    </div>
                    <div class="selected-company" id="selectedCompanyA" style="display: none; margin-top: 20px;">
                        <div class="selected-info">
                            
                        </div>
                    </div>
                </div>
                
                <div class="company-selector">
                    <div class="selector-header">
                        <div class="company-letter">B</div>
                        <h3>Second Company</h3>
                    </div>
                    <div class="search-container">
                        <input type="text" class="search-input" id="companyBInput" placeholder="Search for a company...">
                        <i class="fas fa-search search-icon"></i>
                        <div class="search-results" id="companyBResults"></div>
                    </div>
                    <div class="selected-company" id="selectedCompanyB" style="display: none; margin-top: 20px;">
                        <div class="selected-info">
                            
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="loading-spinner" id="loadingSpinner">
                <div class="spinner"></div>
                <p>Comparing companies...</p>
            </div>
            
            <button class="compare-btn" id="compareBtn" disabled>Compare Companies</button>
            
            <div class="comparison-results" id="comparisonResults">
                <div class="results-header">
                    <div class="company-header" id="companyAHeader">
                        <img src="" class="company-logo-lg" id="companyALogo">
                        <h2 class="company-name-lg" id="companyAName"></h2>
                        <div class="company-symbol-lg" id="companyASymbol"></div>
                    </div>
                    
                    <div class="vs-circle">VS</div>
                    
                    <div class="company-header" id="companyBHeader">
                        <img src="" class="company-logo-lg" id="companyBLogo">
                        <h2 class="company-name-lg" id="companyBName"></h2>
                        <div class="company-symbol-lg" id="companyBSymbol"></div>
