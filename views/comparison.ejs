    <script>
        const data = JSON.parse(document.getElementById('company-data').textContent);
    </script>

    <script>


        
        let esgComparisonChart = null;
        let componentComparisonChart = null;
        let environmentalChart = null;
        let socialChart = null;

        
        const companyAInput = document.getElementById('companyAInput');
        const companyBInput = document.getElementById('companyBInput');
        const companyAResults = document.getElementById('companyAResults');
        const companyBResults = document.getElementById('companyBResults');
        const compareBtn = document.getElementById('compareBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const comparisonResults = document.getElementById('comparisonResults');
        const metricsContainer = document.getElementById('metricsContainer');
        const graphsSection = document.getElementById('graphsSection');
        
       
        let selectedCompanyA = null;
        let selectedCompanyB = null;

        
        document.addEventListener('DOMContentLoaded', function() {
            setupSearch();
            setupCompareButton();
            setupNavbarScroll();
            setupNewsletterForm();
            
        });

        
        function setupSearch() {
            
            companyAInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                if (searchTerm.length > 2) {
                    const results = data.filter(company => 
                        company.companyName.toLowerCase().includes(searchTerm) || 
                        company.symbol.toLowerCase().includes(searchTerm)
                    ).slice(0, 5);
                    
                    displaySearchResults(results, companyAResults, 'A');
                } else {
                    companyAResults.style.display = 'none';
                }
            });
            
            
            companyBInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                if (searchTerm.length > 2) {
                    const results = data.filter(company => 
                        company.companyName.toLowerCase().includes(searchTerm) || 
                        company.symbol.toLowerCase().includes(searchTerm)
                    ).slice(0, 5);
                    
                    displaySearchResults(results, companyBResults, 'B');
                } else {
                    companyBResults.style.display = 'none';
                }
            });
            
            
            document.addEventListener('click', function(e) {
                if (!companyAInput.contains(e.target) && !companyAResults.contains(e.target)) {
                    companyAResults.style.display = 'none';
                }
                if (!companyBInput.contains(e.target) && !companyBResults.contains(e.target)) {
                    companyBResults.style.display = 'none';
                }
            });
        }

        
        function displaySearchResults(results, container, companyLetter) {
            container.innerHTML = '';
            
            if (results.length === 0) {
                const noResults = document.createElement('div');
                noResults.className = 'search-result-item';
                noResults.textContent = 'No companies found';
                container.appendChild(noResults);
            } else {
                results.forEach(company => {
                    const resultItem = document.createElement('div');
                    resultItem.className = 'search-result-item';
                    resultItem.innerHTML = `
                        <img src="${company.logo}" alt="${company.companyName}" onerror="this.src='https://via.placeholder.com/30'">
                        <div class="company-info">
                            <div class="company-name">${company.companyName}</div>
                            <div class="company-symbol">${company.symbol}</div>
                        </div>
                    `;
                    resultItem.addEventListener('click', function() {
                        selectCompany(company, companyLetter);
                        container.style.display = 'none';
                    });
                    container.appendChild(resultItem);
                });
            }
            
            container.style.display = 'block';
        }

        
        function selectCompany(company, companyLetter) {
            if (companyLetter === 'A') {
                selectedCompanyA = company;
                companyAInput.value = company.companyName;
                document.getElementById('selectedCompanyA').style.display = 'block';
                document.getElementById('selectedCompanyA').querySelector('.selected-info').innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <img src="${company.logo}" style="width: 50px; height: 50px; border-radius: 50%; margin-right: 15px;" onerror="this.src='https://via.placeholder.com/50'">
                        <div>
                            <h4>${company.companyName}</h4>
                            <div>ESG Score: <strong>${company.ESGScore.toFixed(2)}</strong> (${company.ESGRiskRating})</div>
                        </div>
                    </div>
                `;
            } else {
                selectedCompanyB = company;
                companyBInput.value = company.companyName;
                document.getElementById('selectedCompanyB').style.display = 'block';
                document.getElementById('selectedCompanyB').querySelector('.selected-info').innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <img src="${company.logo}" style="width: 50px; height: 50px; border-radius: 50%; margin-right: 15px;" onerror="this.src='https://via.placeholder.com/50'">
                        <div>
                            <h4>${company.companyName}</h4>
                            <div>ESG Score: <strong>${company.ESGScore.toFixed(2)}</strong> (${company.ESGRiskRating})</div>
                        </div>
                    </div>
                `;
            }
            
            
            compareBtn.disabled = !(selectedCompanyA && selectedCompanyB);
        }

        
        function setupCompareButton() {
            compareBtn.addEventListener('click', function() {
                if (selectedCompanyA && selectedCompanyB) {
                    showLoading(true);
                    
                    setTimeout(() => {
                        compareCompanies(selectedCompanyA, selectedCompanyB);
                        showLoading(false);
                    }, 1000);
                }
            });
        }

        
        function showLoading(show) {
            if (show) {
                loadingSpinner.style.display = 'block';
                comparisonResults.style.display = 'none';
            } else {
                loadingSpinner.style.display = 'none';
            }
        }

        
        function compareCompanies(companyA, companyB) {
            
            document.getElementById('companyALogo').src = companyA.logo;
            document.getElementById('companyALogo').onerror = function() { this.src = 'https://via.placeholder.com/80'; };
            document.getElementById('companyAName').textContent = companyA.companyName;
            document.getElementById('companyASymbol').textContent = companyA.symbol;
            
            document.getElementById('companyBLogo').src = companyB.logo;
            document.getElementById('companyBLogo').onerror = function() { this.src = 'https://via.placeholder.com/80'; };
            document.getElementById('companyBName').textContent = companyB.companyName;
            document.getElementById('companyBSymbol').textContent = companyB.symbol;
            
            
            metricsContainer.innerHTML = '';
            
            
            const metrics = [
                {
                    title: 'Environmental Score',
                    icon: 'fas fa-leaf',
                    valueA: companyA.environmentalScore,
                    valueB: companyB.environmentalScore,
                    higherIsBetter: true
                },
                {
                    title: 'Social Score',
                    icon: 'fas fa-users',
                    valueA: companyA.socialScore,
                    valueB: companyB.socialScore,
                    higherIsBetter: true
                },
                {
                    title: 'Governance Score',
                    icon: 'fas fa-balance-scale',
                    valueA: companyA.governanceScore,
                    valueB: companyB.governanceScore,
                    higherIsBetter: true
                },
                {
                    title: 'Industry Rank',
                    icon: 'fas fa-trophy',
                    valueA: parseInt(companyA.industryRank),
                    valueB: parseInt(companyB.industryRank),
                    higherIsBetter: false,
                    isRank: true
                }
            ];
            
           
            metrics.forEach(metric => {
                const metricCard = document.createElement('div');
                metricCard.className = 'metric-card';
                
                
                let winner = '';
                let percentage = 50;
                
                if (metric.isRank) {
                    
                    if (metric.valueA < metric.valueB) {
                        winner = companyA.companyName;
                        percentage = 30;
                    } else if (metric.valueA > metric.valueB) {
                        winner = companyB.companyName;
                        percentage = 70;
                    } else {
                        winner = 'Tie';
                    }
                } else {
                    
                    if (metric.valueA > metric.valueB) {
                        winner = companyA.companyName;
                        percentage = 30 + ((metric.valueA - metric.valueB) / 100 * 40);
                    } else if (metric.valueA < metric.valueB) {
                        winner = companyB.companyName;
                        percentage = 70 - ((metric.valueB - metric.valueA) / 100 * 40);
                    } else {
                        winner = 'Tie';
                    }
                }
                
                
                percentage = Math.max(10, Math.min(90, percentage));
                
                metricCard.innerHTML = `
                    <div class="metric-title">
                        <i class="${metric.icon}"></i>
                        ${metric.title}
                    </div>
                    <div class="metric-values">
                        <div class="metric-value">${metric.isRank ? metric.valueA : metric.valueA.toFixed(2)}</div>
                        <div class="metric-value">${metric.isRank ? metric.valueB : metric.valueB.toFixed(2)}</div>
                    </div>
                    <div class="metric-bar-container">
                        <div class="metric-bar" style="width: ${percentage}%; margin-left: ${100 - percentage}%;"></div>
                    </div>
                    <div class="winner">
                        ${winner === 'Tie' ? 'Both companies are equal' : `<strong>${winner}</strong> is better`}
                    </div>
                `;
                
                metricsContainer.appendChild(metricCard);
            });
            
            
            const overallScoreCard = document.createElement('div');
            overallScoreCard.className = 'overall-score';
            
            const scoreDifference = companyA.ESGScore - companyB.ESGScore;
            let differenceText = '';
            let differenceClass = '';
            
            if (scoreDifference > 0) {
                differenceText = `${companyA.companyName} scores ${scoreDifference.toFixed(2)} points higher`;
                differenceClass = 'higher';
            } else if (scoreDifference < 0) {
                differenceText = `${companyB.companyName} scores ${Math.abs(scoreDifference).toFixed(2)} points higher`;
                differenceClass = 'lower';
            } else {
                differenceText = 'Both companies have the same ESG Score';
            }
            
            overallScoreCard.innerHTML = `
                <div class="score-title">Overall ESG Score Comparison</div>
                <div style="display: flex; justify-content: center; gap: 40px;">
                    <div>
                        <div style="font-size: 1.2rem;">${companyA.companyName}</div>
                        <div class="score-value">${companyA.ESGScore.toFixed(2)}</div>
                    </div>
                    <div>
                        <div style="font-size: 1.2rem;">${companyB.companyName}</div>
                        <div class="score-value">${companyB.ESGScore.toFixed(2)}</div>
                    </div>
                </div>
                <div class="score-difference ${differenceClass}">
                    ${differenceText}
                </div>
            `;
            
            metricsContainer.appendChild(overallScoreCard);
            
            
            createCharts(companyA, companyB);
            
            
            comparisonResults.style.display = 'block';
            graphsSection.style.display = 'block';
            
            
            comparisonResults.scrollIntoView({ behavior: 'smooth' });
            
            
            saveComparisonToDatabase(companyA, companyB);
        }

        
        function createCharts(companyA, companyB) {
           
            if (esgComparisonChart) esgComparisonChart.destroy();
            if (componentComparisonChart) componentComparisonChart.destroy();
            if (environmentalChart) environmentalChart.destroy();
            if (socialChart) socialChart.destroy();

            
            const esgCtx = document.getElementById('esgComparisonChart').getContext('2d');
            esgComparisonChart = new Chart(esgCtx, {
                type: 'bar',
                data: {
                    labels: [companyA.companyName, companyB.companyName],
                    datasets: [{
                        label: 'ESG Score',
                        data: [companyA.ESGScore, companyB.ESGScore],
                        backgroundColor: [
                            'rgba(46, 125, 50, 0.7)',
                            'rgba(129, 199, 132, 0.7)'
                        ],
                        borderColor: [
                            'rgba(46, 125, 50, 1)',
                            'rgba(129, 199, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'ESG Score (0-100)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `ESG Score: ${context.raw.toFixed(2)}`;
                                }
                            }
                        }
                    }
                }
            });

            
            const componentCtx = document.getElementById('componentComparisonChart').getContext('2d');
            componentComparisonChart = new Chart(componentCtx, {
                type: 'radar',
                data: {
                    labels: ['Environmental', 'Social', 'Governance'],
                    datasets: [
                        {
                            label: companyA.companyName,
                            data: [companyA.environmentalScore, companyA.socialScore, companyA.governanceScore],
                            backgroundColor: 'rgba(46, 125, 50, 0.2)',
                            borderColor: 'rgba(46, 125, 50, 1)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgba(46, 125, 50, 1)'
                        },
                        {
                            label: companyB.companyName,
                            data: [companyB.environmentalScore, companyB.socialScore, companyB.governanceScore],
                            backgroundColor: 'rgba(129, 199, 132, 0.2)',
                            borderColor: 'rgba(129, 199, 132, 1)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgba(129, 199, 132, 1)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: {
                                display: true
                            },
                            suggestedMin: 0,
                            suggestedMax: 100,
                            ticks: {
                                stepSize: 20
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    }
                }
            });

            
            const envCtx = document.getElementById('environmentalChart').getContext('2d');
            environmentalChart = new Chart(envCtx, {
                type: 'bar',
                data: {
                    labels: ['Carbon Footprint', 'Renewable Energy', 'Water Usage', 'Waste Reduction'],
                    datasets: [
                        {
                            label: companyA.companyName,
                            data: [
                                companyA.carbonFootprint,
                                companyA.renewableEnergy,
                                companyA.waterUsage,
                                companyA.wasteReduction
                            ],
                            backgroundColor: 'rgba(46, 125, 50, 0.7)',
                            borderColor: 'rgba(46, 125, 50, 1)',
                            borderWidth: 1
                        },
                        {
                            label: companyB.companyName,
                            data: [
                                companyB.carbonFootprint,
                                companyB.renewableEnergy,
                                companyB.waterUsage,
                                companyB.wasteReduction
                            ],
                            backgroundColor: 'rgba(129, 199, 132, 0.7)',
                            borderColor: 'rgba(129, 199, 132, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Metrics Value'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        if (context.dataIndex === 0) { // Carbon Footprint
                                            label += context.parsed.y + ' metric tons CO2e';
                                        } else if (context.dataIndex === 1) { // Renewable Energy
                                            label += context.parsed.y + '%';
                                        } else if (context.dataIndex === 2) { // Water Usage
                                            label += context.parsed.y + ' million m³';
                                        } else if (context.dataIndex === 3) { // Waste Reduction
                                            label += context.parsed.y + '% reduction';
                                        }
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            
            const socialCtx = document.getElementById('socialChart').getContext('2d');
            socialChart = new Chart(socialCtx, {
                type: 'bar',
                data: {
                    labels: ['Employee Satisfaction', 'Diversity Score', 'Community Investment', 'Board Diversity'],
                    datasets: [
                        {
                            label: companyA.companyName,
                            data: [
                                companyA.employeeSatisfaction,
                                companyA.diversityScore,
                                companyA.communityInvestment,
                                companyA.boardDiversity
                            ],
                            backgroundColor: 'rgba(46, 125, 50, 0.7)',
                            borderColor: 'rgba(46, 125, 50, 1)',
                            borderWidth: 1
                        },
                        {
                            label: companyB.companyName,
                            data: [
                                companyB.employeeSatisfaction,
                                companyB.diversityScore,
                                companyB.communityInvestment,
                                companyB.boardDiversity
                            ],
                            backgroundColor: 'rgba(129, 199, 132, 0.7)',
                            borderColor: 'rgba(129, 199, 132, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Score (%) / Investment ($M)'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        if (context.dataIndex === 2) {
                                            label += '$' + context.parsed.y + 'M';
                                        } else {
                                            label += context.parsed.y + '%';
                                        }
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        
        function saveComparisonToDatabase(companyA, companyB) {
            
            const comparisonData = {
                companyA: companyA.id,
                companyB: companyB.id,
                timestamp: new Date().toISOString()
            };
            
            console.log('Comparison data to be saved:', comparisonData);
        }

        
