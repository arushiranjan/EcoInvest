        // Generate pathway with perfect curves
        function generatePathway() {
            const cards = document.querySelectorAll('.card');
            const svgPath = document.querySelector('.pathway-line');
            let pathData = '';
            const containerRect = document.querySelector('.timeline-container').getBoundingClientRect();
            
            // Start with first card
            const firstCard = cards[0];
            const firstRect = firstCard.getBoundingClientRect();
            const startX = firstRect.left + firstRect.width/2 - containerRect.left;
            const startY = firstRect.top + firstRect.height/2 - containerRect.top;
            pathData = `M${startX},${startY}`;
            
            // Create smooth pathway through all cards
            for (let i = 1; i < cards.length; i++) {
                const prevCard = cards[i-1];
                const currentCard = cards[i];
                const prevRect = prevCard.getBoundingClientRect();
                const currentRect = currentCard.getBoundingClientRect();
                
                const prevX = prevRect.left + prevRect.width/2 - containerRect.left;
                const prevY = prevRect.top + prevRect.height/2 - containerRect.top;
                const currentX = currentRect.left + currentRect.width/2 - containerRect.left;
                const currentY = currentRect.top + currentRect.height/2 - containerRect.top;
                
                // Calculate control points for perfect curves
                const yDiff = currentY - prevY;
                const xDiff = currentX - prevX;
                
                // First control point (near previous point)
                const cp1x = prevX + xDiff * 0.25;
                const cp1y = prevY + yDiff * 0.75;
                
                // Second control point (near current point)
                const cp2x = currentX - xDiff * 0.25;
                const cp2y = currentY - yDiff * 0.75;
                
                pathData += ` C${cp1x},${cp1y} ${cp2x},${cp2y} ${currentX},${currentY}`;
            }
            
            svgPath.setAttribute('d', pathData);
            
            // Adjust viewBox to fit all content perfectly
            const lastCard = cards[cards.length-1];
            const lastRect = lastCard.getBoundingClientRect();
            const containerHeight = lastRect.bottom - containerRect.top + 200;
            document.querySelector('.pathway').setAttribute('viewBox', `0 0 1100 ${containerHeight}`);
        }

